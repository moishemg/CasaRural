<h1>Listado de cosas para la Casa Rural</h1>

<table>
  <thead>
    <tr>
      <th>Cuerpo</th>
      <th>Comprado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compras.each do |compra| %>
      <tr>
        <td><%= compra.cuerpo %></td>
        <td><%= compra.comprado %></td>
        <td><%= link_to 'Mostrar', compra %></td>
        <td><%= link_to 'Modificar', edit_compra_path(compra) %></td>
        <td><%= link_to 'Eliminar', compra, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva línea', new_compra_path %>
